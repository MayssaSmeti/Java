<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox layoutX="150" layoutY="50" prefHeight="300" prefWidth="300" spacing="10">
            <Label text="Ajouter un rapport" />
            <TextField fx:id="descriptionTF" promptText="Description" />
            <TextArea fx:id="preliminaireTA" promptText="Preliminaire" />
            <TextArea fx:id="expertiseTA" promptText="Expertise" />
            <Button fx:id="imageButton" text="Choisir une image" onAction="#onImageButtonClicked" />
            <Button fx:id="ajouterButton" text="Ajouter" onAction="#onAjouterClicked" />
        </VBox>
    </children>
</AnchorPane>
